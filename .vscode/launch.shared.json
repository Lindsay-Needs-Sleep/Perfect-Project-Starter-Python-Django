    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests - Attach Debug",
            "type": "python",
            "justMyCode": false,
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Api - Attach Debug",
            "type": "python",
            "justMyCode": false,
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "port": 5678,
            "cwd": "${workspaceRoot}",
            "program": "docker compose run -d django sh -c './docker/django-init.sh && python manage.py runserver 0.0.0.0:8080 --nothreading --noreload'"
        }
    ]
}
