{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests - Attach Debug",
            "type": "python",
            "justMyCode": false,
            "request": "attach",
            "connect": {
                "host": "django-container",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/proj_django/",
                    "remoteRoot": "/proj"
                }
            ]
        },
        {
            "name": "Python - Attach Debug",
            "type": "python",
            "justMyCode": false,
            "request": "attach",
            "connect": {
                "host": "django-container",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/proj_django/",
                    "remoteRoot": "/proj"
                }
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "localRoot": "${workspaceFolder}/proj_node",
            "remoteRoot": "/proj",
            "address": "node-container"
        },
    ]
