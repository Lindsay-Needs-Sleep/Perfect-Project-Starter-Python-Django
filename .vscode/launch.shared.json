{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests - Attach Debug",
            "type": "python",
            "justMyCode": false,
            "request": "attach",
            "connect": {
                "host": "longprojectname-debug-container",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/django_src/",
                    "remoteRoot": "/django_src"
                }
            ]
        },
        {
            "name": "Python - Attach Debug",
